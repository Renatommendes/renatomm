unit uDadosPessoa;

interface

uses
  System.SysUtils;

  Type
    RDados_Pessoa = record
      Altura: Double;
      Peso: Double;
      Sexo: String;
      IMC: String;

    end;
    //Declaração da função

    function CalcularIMC(p_Peso, p_Altura: Double; p_Sexo: String): String;

    //-------------------------
    var
      P_Dados_Pessoa : RDados_Pessoa;

implementation

function CalcularIMC(p_Peso, p_Altura: Double; p_Sexo: String): String;
var
  l_IMC: Double;
  l_StrIMC: String;
  begin
    if p_Sexo = '' then   //para tirar o erro da exceção fazer no teclado ctrl+shift+A a referencia fica no topo  (System.SysUtils;)
      raise Exception.Create
        ('Obrigatório informar o sexo');

end.
